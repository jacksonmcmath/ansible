http:
  address: 0.0.0.0:{{ adguard_management_port }}
  session_ttl: 720h
auth_attempts: 5
block_auth_min: 15
theme: dark
dns:
  bind_hosts:
    - 0.0.0.0
  port: 53
  anonymize_client_ip: false
  ratelimit: 20
  refuse_any: false
  upstream_dns:
    - https://dns.cloudflare.com/dns-query
  bootstrap_dns:
    - 1.1.1.1
    - 1.0.0.1
    - 2606:4700:4700::1111
    - 2606:4700:4700::1001
  fallback_dns:
    - 1.1.1.1
    - 1.0.0.1
    - 2606:4700:4700::1111
    - 2606:4700:4700::1001
  upstream_mode: load_balance
  fastest_timeout: 1s
  cache_size: 8388608
tls:
  enabled: false
filters:
  - enabled: true
    name: AdGuard DNS filter
    url: https://adguardteam.github.io/HostlistsRegistry/assets/filter_1.txt
    id: 1
dhcp:
  enabled: false
filtering:
  safe_search:
    enabled: false
  blocking_mode: default
  parental_block_host: family.dns.mullvad.net
  parental_enabled: false
  safebrowsing_block_host: base.dns.mullvad.net
  safebrowsing_enabled: false
  rewrites:
    {% for rewrite in adguard_dns_rewrites %}
    - domain: {{ rewrite.domain }}
      answer: {{ rewrite.answer }}
    {% endfor %}
  protection_enabled: true
log:
  file: syslog
  max_backups: 8
  max_size: 128
  max_age: 7
  local_time: true
os:
  group: {{ adguard_user.name }}
  user: {{ adguard_user.name }}
