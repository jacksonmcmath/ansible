[Unit]
Description=AdGuard Home Daemon
After=syslog.target
After=network-online.target 

[Service]
Type=simple
User=root
Group=root
ExecStart={{ adguard_install_dir }}/AdGuardHome \
    -c {{ adguard_config_dir }}/AdGuardHome.yaml \
    -w {{ adguard_install_dir }}
Restart=always
RestartSec=10
StartLimitInterval=5
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
