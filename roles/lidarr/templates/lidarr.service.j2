[Unit]
Description=Lidarr Daemon
After=syslog.target network.target

[Service]
Type=simple
User={{ lidarr_user.name }}
Group={{ lidarr_user.name }}
ExecStart={{ lidarr_install_dir }}/Lidarr -nobrowser -data={{ lidarr_config_dir }}
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
